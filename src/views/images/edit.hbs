<div class="col-md-10 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Image</h3>
        </div>
        <div class="card-body">
            <form action="/images/edit/{{image._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{image.title}}">
                </div>
                <div class="form-group">
                    <img src="{{image.imageUrl}}" class="img-fluid" width="100%" height="200">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{image.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>