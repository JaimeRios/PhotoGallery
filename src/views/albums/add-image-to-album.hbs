<div class="row">
    <input type="hidden" id="IdAlbum" value="{{idAlbum}}">
    {{#each images}}
     <div class="col-md-4">
         <div class="card">
             <div class="card-body">
                 <h4 class="card-title d-flex justify-content-between align-items-center">
                     {{title}} 
                 </h4>
                 <img src="{{imageUrl}}" class="img-fluid" alt="Girl in a jacket" width="100%" height="200">
                 <h5>{{description}}</h5>
                  <form action="/albums/addImage" method="POST">
                        <input type="hidden" name="_id" value="{{_id}}">
                        <input type="hidden" name="IdAlbum" >
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Add to Album
                            </button>
                        </div>
                    </form>
                 
             </div>
         </div>
     </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not images yet. Or all image has been added</p>
                <a href="/images/add" class="btn btn-success btn-block">Upload one</a>
            </div>
        </div>
    {{/each}}
</div>
<script>

window.onload = function() {
console.log(document.getElementById("IdAlbum").value)
    var input =document.getElementsByName("IdAlbum");

for(i = 0;i < input.length; i++)
{
    input[i].value = document.getElementById("IdAlbum").value ;
}
};

    
    
</script>